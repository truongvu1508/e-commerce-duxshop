<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Order</title>
    <link
      rel="shortcut icon"
      type="image/png"
      href="/admin/images/logos/logo-dux.svg"
    />
    <link rel="stylesheet" href="/admin/css/styles.min.css" />
  </head>
  <body>
    <!--  Body Wrapper -->
    <div
      class="page-wrapper"
      id="main-wrapper"
      data-layout="vertical"
      data-navbarbg="skin6"
      data-sidebartype="full"
      data-sidebar-position="fixed"
      data-header-position="fixed"
    >
      <!-- Sidebar Start -->
      <%- include('../layout/sidebar'); -%>
      <!--  Sidebar End -->
      <!--  Main wrapper -->
      <div class="body-wrapper">
        <!--  Header Start -->
        <%- include('../layout/header'); -%>
        <!--  Header End -->
        <div class="body-wrapper-inner">
          <div class="container-fluid">
            <!--  Row 1 - Statistics Cards -->
            <div>Order Page</div>
            <div>
              <table class="table table-hover table-bordered">
                <thead>
                  <th>Id</th>
                  <th>User</th>
                  <th>Total Price</th>
                  <th>Status</th>
                  <th>Payment Method</th>
                  <th>Payment Status</th>
                  <th>Action</th>
                </thead>
                <tbody>
                  <% orders.forEach( function (order) { %>
                  <tr>
                    <td><%= order.id %></td>
                    <td><%= order?.user?.fullName ?? "" %></td>
                    <td>
                      <%= new Intl.NumberFormat('vi-VN', { style:'currency',
                      currency: 'VND' }).format(order.totalPrice)%>
                    </td>
                    <td><%= order.status %></td>
                    <td><%= order.paymentMethod %></td>
                    <td><%= order.paymentStatus %></td>
                    <td>
                      <div style="display: flex; gap: 10px">
                        <form
                          action="/admin/order/<%= order.id %>"
                          method="get"
                        >
                          <button type="submit" class="btn btn-warning">
                            View
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <%- include('../layout/footer'); -%>
      </div>
    </div>
    <!-- CDN Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.35.3/dist/apexcharts.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simplebar@5.3.8/dist/simplebar.min.js"></script>
    <!-- Local Custom Scripts -->
    <script src="/admin/js/sidebarmenu.js"></script>
    <script src="/admin/js/app.min.js"></script>
    <script src="/admin/js/dashboard.js"></script>
    <!-- Iconify (already using CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
  </body>
</html>
