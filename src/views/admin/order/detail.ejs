<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Order Detail</title>
    <link
      rel="shortcut icon"
      type="image/png"
      href="/admin/images/logos/logo-dux.svg"
    />
    <link rel="stylesheet" href="/admin/css/styles.min.css" />
  </head>
  <body>
    <!--  Body Wrapper -->
    <div
      class="page-wrapper"
      id="main-wrapper"
      data-layout="vertical"
      data-navbarbg="skin6"
      data-sidebartype="full"
      data-sidebar-position="fixed"
      data-header-position="fixed"
    >
      <!-- Sidebar Start -->
      <%- include('../layout/sidebar'); -%>
      <!--  Sidebar End -->
      <!--  Main wrapper -->
      <div class="body-wrapper">
        <!--  Header Start -->
        <%- include('../layout/header'); -%>
        <!--  Header End -->
        <div class="body-wrapper-inner">
          <div class="container-fluid">
            <!--  Row 1 - Statistics Cards -->
            <h3>Order Detail with id = <%= id%></h3>
            <div>
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th scope="col">Sản phẩm</th>
                    <th scope="col">Tên</th>
                    <th scope="col">Giá</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col">Thành tiền</th>
                  </tr>
                </thead>
                <tbody>
                  <% orderDetails.forEach( function (orderDetails, index) { %>
                  <tr>
                    <th scope="row">
                      <div class="d-flex align-items-center">
                        <img
                          src="/images/product/<%= orderDetails.product.image%>"
                          class="img-fluid rounded shadow-sm"
                          style="width: 150px; height: 100px; object-fit: cover"
                          alt="<%= orderDetails.product.name || 'Product Image' %>"
                        />
                      </div>
                    </th>
                    <td>
                      <p class="mb-0 mt-4">
                        <a
                          target="_blank"
                          href="/product/<%= orderDetails.product.id%>"
                          ><%= orderDetails.product.name%></a
                        >
                      </p>
                    </td>
                    <td>
                      <p class="mb-0 mt-4">
                        <%= new Intl.NumberFormat('vi-VN', { style:'currency',
                        currency: 'VND' }).format(orderDetails.product.price)%>
                      </p>
                    </td>
                    <td>
                      <p class="mb-0 mt-4"><%= orderDetails.quantity %></p>
                    </td>
                    <td>
                      <p
                        class="mb-0 mt-4"
                        data-cart-detail-id="<%= orderDetails.id%>"
                      >
                        <%= new Intl.NumberFormat('vi-VN', { style:'currency',
                        currency: 'VND' }).format(orderDetails.quantity *
                        orderDetails.price)%>
                      </p>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <a href="/admin/order" class="btn btn-success mt-3">Back</a>
          </div>
        </div>
        <%- include('../layout/footer'); -%>
      </div>
    </div>
    <!-- CDN Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.35.3/dist/apexcharts.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simplebar@5.3.8/dist/simplebar.min.js"></script>
    <!-- Local Custom Scripts -->
    <script src="/admin/js/sidebarmenu.js"></script>
    <script src="/admin/js/app.min.js"></script>
    <script src="/admin/js/dashboard.js"></script>
    <!-- Iconify (already using CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
  </body>
</html>
