<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Manager User</title>
    <link
      rel="shortcut icon"
      type="image/png"
      href="/admin/images/logos/logo-dux.svg"
    />
    <link rel="stylesheet" href="/admin/css/styles.min.css" />
  </head>
  <body>
    <!--  Body Wrapper -->
    <div
      class="page-wrapper"
      id="main-wrapper"
      data-layout="vertical"
      data-navbarbg="skin6"
      data-sidebartype="full"
      data-sidebar-position="fixed"
      data-header-position="fixed"
    >
      <!-- Sidebar Start -->
      <%- include('../layout/sidebar'); -%>
      <!--  Sidebar End -->
      <!--  Main wrapper -->
      <div class="body-wrapper">
        <!--  Header Start -->
        <%- include('../layout/header'); -%>
        <!--  Header End -->
        <div class="body-wrapper-inner">
          <div class="container-fluid">
            <div
              style="
                display: flex;
                justify-content: space-between;
                align-items: center;
              "
            >
              <h1>List User</h1>
              <div>
                <a href="/admin/create-user" class="btn btn-primary"
                  >Create User</a
                >
              </div>
            </div>
            <div>
              <table class="table table-hover table-bordered">
                <thead>
                  <th>Id</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Address</th>
                  <th>Action</th>
                </thead>
                <tbody>
                  <% users.forEach( function (user) { %>
                  <tr>
                    <td><%= user.id %></td>
                    <td><%= user.fullName %></td>
                    <td><%= user.username %></td>
                    <td><%= user.address %></td>
                    <td>
                      <div style="display: flex; gap: 10px">
                        <!-- <a href="/handle-view-user/<%= user.id %>"> View a</a> -->
                        <form
                          action="/admin/view-user/<%= user.id %>"
                          method="get"
                        >
                          <button type="submit" class="btn btn-warning">
                            View
                          </button>
                        </form>
                        <form
                          action="/admin/delete-user/<%= user.id %>"
                          method="post"
                        >
                          <button type="submit" class="btn btn-danger">
                            Delete
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <%- include('../layout/footer'); -%>
      </div>
    </div>
    <!-- CDN Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.35.3/dist/apexcharts.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simplebar@5.3.8/dist/simplebar.min.js"></script>
    <!-- Local Custom Scripts -->
    <script src="/admin/js/sidebarmenu.js"></script>
    <script src="/admin/js/app.min.js"></script>
    <script src="/admin/js/dashboard.js"></script>
    <!-- Iconify (already using CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
  </body>
</html>
