<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Manager User</title>
    <link
      rel="shortcut icon"
      type="image/png"
      href="/admin/images/logos/favicon.png"
    />
    <link rel="stylesheet" href="/admin/css/styles.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  </head>
  <body>
    <!--  Body Wrapper -->
    <div
      class="page-wrapper"
      id="main-wrapper"
      data-layout="vertical"
      data-navbarbg="skin6"
      data-sidebartype="full"
      data-sidebar-position="fixed"
      data-header-position="fixed"
    >
      <!-- Sidebar Start -->
      <%- include('../layout/sidebar'); -%>
      <!--  Sidebar End -->
      <!--  Main wrapper -->
      <div class="body-wrapper">
        <!--  Header Start -->
        <%- include('../layout/header'); -%>
        <!--  Header End -->
        <div class="body-wrapper-inner">
          <div class="container-fluid">
            <div style="width: 600; margin: 0 auto">
              <h3 class="pb-2">Create a user</h3>
              <form action="/admin/handle-create-user" method="post">
                <div class="mb-3">
                  <label class="form-label">Full name:</label>
                  <input
                    name="fullName"
                    type="text"
                    class="form-control"
                    placeholder="Nguyen Van A"
                  />
                </div>
                <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input
                    name="username"
                    type="email"
                    class="form-control"
                    placeholder="name@example.com"
                  />
                </div>
                <div class="row">
                  <div class="mb-3 col-6">
                    <label class="form-label">Phone</label>
                    <input type="text" class="form-control" name="phone" />
                  </div>
                  <div class="mb-3 col-6">
                    <label class="form-label">Role</label>
                    <select name="role" class="form-select">
                      <% roles.forEach((role,index) => { %>
                      <option value="<%-role.id %>"><%- role.name %></option>
                      <%})%>
                    </select>
                  </div>
                </div>
                <div class="row">
                  <div class="mb-3 col-6">
                    <label for="formFile" class="form-label">Avatar</label>
                    <input class="form-control" type="file" id="avatarFile" />
                  </div>
                  <div
                    class="col-6 d-flex align-items-center justify-content-start"
                  >
                    <img
                      id="avatarPreview"
                      src=""
                      alt="avatar preview"
                      class="img-thumbnail border border-2"
                      style="
                        max-height: 180px;
                        max-width: 180px;
                        display: none;
                        object-fit: cover;
                      "
                      accept=".png, .jpg, .jpeg, .gif"
                    />
                  </div>
                </div>
                <div class="mb-3">
                  <label class="form-label">Address</label>
                  <textarea
                    name="address"
                    class="form-control"
                    rows="2"
                  ></textarea>
                </div>
                <div class="mb-3">
                  <button type="submit" class="btn btn-warning">Submit</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <%- include('../layout/footer'); -%>
      </div>
    </div>
    <!-- CDN Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.35.3/dist/apexcharts.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simplebar@5.3.8/dist/simplebar.min.js"></script>
    <!-- Local Custom Scripts -->
    <script src="/admin/js/sidebarmenu.js"></script>
    <script src="/admin/js/app.min.js"></script>
    <script src="/admin/js/dashboard.js"></script>
    <!-- Iconify (already using CDN) -->
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
  </body>
  <script>
    $(document).ready(() => {
      const avatarFile = $("#avatarFile");

      avatarFile.change(function (e) {
        const imgURL = URL.createObjectURL(e.target.files[0]);
        $("#avatarPreview").attr("src", imgURL);
        $("#avatarPreview").css({ display: "block" });
      });
    });
  </script>
</html>
